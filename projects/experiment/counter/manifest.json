{
  "name": "counter",
  "version": "1.0",
  "description": "replace words",
  "manifest_version": 2,
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [{
    "matches": ["<all_urls>"]
  }],
  "browser_action": {
    "default_popup":"popup/popup.html"
  },
