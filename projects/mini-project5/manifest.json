{
  "name": "Drink Water",
  "description": "This chrome extension could set the alarm to remind users to drink water",
  "version": "1.0",
  "manifest_version": 2,
  "permissions": [
    "alarms", "notifications", "storage"
  ],
  "browser_action": {
    "default_title": "Drink Water Event",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}
